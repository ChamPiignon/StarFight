<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LaunchPage">
    <children>
        <GridPane layoutX="6.0" layoutY="6.0" prefHeight="236.0" prefWidth="492.0">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="150.0" fx:id="titleLabel"
                       textAlignment="CENTER" GridPane.columnSpan="3">
                    <font>
                        <Font size="21.0"/>
                    </font>
                </Label>
                <TableView fx:id="tableView" prefHeight="79.0" prefWidth="351.0" GridPane.columnSpan="3" GridPane.rowIndex="1">
                    <columns>
                        <TableColumn prefWidth="115.0" fx:id="playerColumn"/>
                        <TableColumn prefWidth="125.0" fx:id="numberColumn"/>
                        <TableColumn prefWidth="115.0" fx:id="statColumn"/>
                        <TableColumn prefWidth="115.0" fx:id="bestColumn"/>
                    </columns>
                </TableView>
                <Button mnemonicParsing="false" fx:id="btn_play" GridPane.rowIndex="2" onAction="#onClickPlay"/>
                <Button mnemonicParsing="false" fx:id="btn_exit" GridPane.columnIndex="2" GridPane.rowIndex="2"
                        onAction="#onClickExit"/>
                <ComboBox fx:id="Cb_language" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
