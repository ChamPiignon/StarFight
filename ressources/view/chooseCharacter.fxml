<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="580.0" prefWidth="1300.0">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"
                  AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="NEVER"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="45.0" vgrow="NEVER" />
        </rowConstraints>
        <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
                <children>
                    <Text fx:id="namePlayer1"/>
                    <TextField/>
                </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
                <children>
                    <Text fx:id="namePlayer2"/>
                    <TextField/>
                </children>
            </VBox>
            <VBox GridPane.columnIndex="1" GridPane.rowSpan="2" GridPane.rowIndex="1" GridPane.valignment="CENTER"
                  GridPane.halignment="CENTER" alignment="CENTER">
                <children>
                    <ImageView pickOnBounds="true" preserveRatio="true">
                        <Image url="/images/vs.png"/>
                    </ImageView>
                    <ImageView pickOnBounds="true" preserveRatio="true" fitWidth="500">
                        <Image url="/images/schema_control.png"/>
                    </ImageView>
                </children>
            </VBox>
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1" alignment="CENTER">
                <children>
                    <Button>
                        <graphic>
                            <ImageView pickOnBounds="true" preserveRatio="true">
                                <Image url="/images/Fighters/Samourai/choose.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button>
                        <graphic>
                            <ImageView pickOnBounds="true" preserveRatio="true">
                                <Image url="/images/Fighters/Ninja/choose.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </children>
            </HBox>
            <HBox GridPane.columnIndex="2" GridPane.rowIndex="1" alignment="CENTER">
                <children>
                    <Button>
                        <graphic>
                            <ImageView pickOnBounds="true" preserveRatio="true">
                                <Image url="/images/Fighters/Samourai/choose.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button>
                        <graphic>
                            <ImageView pickOnBounds="true" preserveRatio="true">
                                <Image url="/images/Fighters/Ninja/choose.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </children>
            </HBox>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.rowIndex="2"
                       GridPane.valignment="CENTER" GridPane.halignment="CENTER">
                <Image url="/images/Fighters/Ninja/choose.png"/>
            </ImageView>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                       GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.valignment="CENTER"
                       GridPane.halignment="CENTER">
                <Image url="/images/Fighters/Samourai/choose.png"/>
            </ImageView>
            <Button mnemonicParsing="false" fx:id="btn_left" GridPane.rowIndex="3" GridPane.valignment="CENTER"
                    GridPane.halignment="CENTER" onAction="#setReadyPlayer1"/>
            <Button mnemonicParsing="false" fx:id="btn_right" GridPane.columnIndex="2" GridPane.rowIndex="3"
                    GridPane.valignment="CENTER" GridPane.halignment="CENTER" onAction="#setReadyPlayer2"/>
        </children>
    </GridPane>
</children>
</AnchorPane>
